<Window x:Class="OzCodeDemo.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OutputWindow" Height="300" Width="500" x:Name="This">
    <Grid>
        <ListBox ItemsSource="{Binding Lines, ElementName=This}" FontWeight="Bold" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Red" BorderThickness="0,1" Margin="0" Padding="2">
                        <TextBlock TextWrapping="Wrap" Text="{Binding}" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>    
    </Grid>
</Window>
